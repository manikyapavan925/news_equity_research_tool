{
    "version": 2,
    "public": true,
    "builds": [
        {
            "src": "src/app.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 60,
                "memory": 3008,
                "pythonVersion": "3.9",
                "installCommand": "pip install -r requirements.txt --no-cache-dir",
                "buildCommand": "echo 'Building...'",
                "devCommand": "streamlit run src/app.py"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "continue": true
        },
        {
            "src": "/(.*)",
            "dest": "src/app.py",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            }
        }
    ],
    "env": {
        "PYTORCH_NO_CUDA": "1",
        "TRANSFORMERS_OFFLINE": "1",
        "TORCH_DEVICE": "cpu"
    }
}
